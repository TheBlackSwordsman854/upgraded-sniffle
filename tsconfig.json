{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["*"]
    },
    "strict": true,
    "lib": ["es2018", "dom"],
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
